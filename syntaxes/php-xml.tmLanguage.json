{
  "scopeName": "source.php.xml",
  "injectionSelector": "L:text.html.php -comment -string",
  "patterns": [
    {
      "include": "#xml-string-double-quoted"
    },
    {
      "include": "#xml-string-single-quoted"
    }
  ],
  "repository": {
    "xml-string-double-quoted": {
      "begin": "(/\\*\\s?xml\\s?\\*/|/\\*\\s?svg\\s?\\*/)\\s*(\")",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "punctuation.definition.string.begin.php"
        }
      },
      "end": "(\")",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.php"
        }
      },
      "name": "string.quoted.double.php",
      "patterns": [
        {
          "begin": "(?<=\")",
          "contentName": "text.xml.embedded.php",
          "end": "(?=\")",
          "name": "string.quoted.double.xml.php",
          "patterns": [
            {
              "begin": "(<\\??)([a-zA-Z][a-zA-Z0-9]*)",
              "end": "(?=(>|\\?>|\\/>)|(?=\"))",
              "beginCaptures": {
                "1": {
                  "name": "punctuation.definition.tag.begin.xml"
                },
                "2": {
                  "name": "entity.name.tag.xml"
                }
              },
              "endCaptures": {
                "1": {
                  "name": "punctuation.definition.tag.end.xml"
                }
              },
              "patterns": [
                {
                  "begin": "\\s*([a-zA-Z0-9:-]+)\\s*(=)\\s*",
                  "beginCaptures": {
                    "1": {
                      "name": "entity.other.attribute-name.xml"
                    },
                    "2": {
                      "name": "punctuation.separator.key-value.xml"
                    }
                  },
                  "end": "(?<=\")|(?<=')|(?=[\\s/>]|\")",
                  "patterns": [
                    {
                      "begin": "\"",
                      "end": "\"",
                      "name": "string.quoted.double.xml",
                      "patterns": [
                        {
                          "include": "source.php#interpolation_double_quoted"
                        }
                      ]
                    },
                    {
                      "begin": "'",
                      "end": "'|(?=\")",
                      "name": "string.quoted.single.xml",
                      "patterns": [
                        {
                          "include": "source.php#interpolation_double_quoted"
                        }
                      ]
                    },
                    {
                      "match": "[^\\s/>\"]+",
                      "name": "string.unquoted.xml",
                      "patterns": [
                        {
                          "include": "source.php#interpolation_double_quoted"
                        }
                      ]
                    }
                  ]
                },
                {
                  "include": "source.php#interpolation_double_quoted"
                }
              ]
            },
            {
              "include": "source.php#interpolation_double_quoted"
            },
            {
              "include": "text.xml"
            }
          ]
        }
      ]
    },
    "xml-string-single-quoted": {
      "begin": "(/\\*\\s?xml\\s?\\*/|/\\*\\s?svg\\s?\\*/)\\s*(')",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "punctuation.definition.string.begin.php"
        }
      },
      "end": "(')",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.php"
        }
      },
      "name": "string.quoted.single.php",
      "patterns": [
        {
          "begin": "(?<=')",
          "contentName": "text.xml.embedded.php",
          "end": "(?=')",
          "name": "string.quoted.single.xml.php",
          "patterns": [
            {
              "match": "\\\\[\\\\']",
              "name": "constant.character.escape.php"
            },
            {
              "begin": "(<\\??)([a-zA-Z][a-zA-Z0-9]*)",
              "end": "(?=(>|\\?>|\\/>)|(?='))",
              "beginCaptures": {
                "1": {
                  "name": "punctuation.definition.tag.begin.xml"
                },
                "2": {
                  "name": "entity.name.tag.xml"
                }
              },
              "endCaptures": {
                "1": {
                  "name": "punctuation.definition.tag.end.xml"
                }
              },
              "patterns": [
                {
                  "begin": "\\s*([a-zA-Z0-9:-]+)\\s*(=)\\s*",
                  "beginCaptures": {
                    "1": {
                      "name": "entity.other.attribute-name.xml"
                    },
                    "2": {
                      "name": "punctuation.separator.key-value.xml"
                    }
                  },
                  "end": "(?<=\")|(?<=')|(?=[\\s/>]|')",
                  "patterns": [
                    {
                      "begin": "\"",
                      "end": "\"|(?=')",
                      "name": "string.quoted.double.xml",
                      "patterns": [
                        {
                          "match": "\\\\[\\\\']",
                          "name": "constant.character.escape.php"
                        }
                      ]
                    },
                    {
                      "begin": "'",
                      "end": "'|(?=')",
                      "name": "string.quoted.single.xml",
                      "patterns": [
                        {
                          "match": "\\\\[\\\\']",
                          "name": "constant.character.escape.php"
                        }
                      ]
                    },
                    {
                      "match": "[^\\s/>']+",
                      "name": "string.unquoted.xml"
                    }
                  ]
                },
                {
                  "match": "\\\\[\\\\']",
                  "name": "constant.character.escape.php"
                }
              ]
            },
            {
              "include": "text.xml"
            }
          ]
        }
      ]
    }
  }
}