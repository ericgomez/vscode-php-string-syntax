{
  "scopeName": "source.php.js",
  "injectionSelector": "L:text.html.php -comment -string",
  "patterns": [
    {
      "include": "#js-string-double-quoted"
    },
    {
      "include": "#js-string-single-quoted"
    }
  ],
  "repository": {
    "js-string-double-quoted": {
      "begin": "(/\\*\\s?js\\s?\\*/)\\s*(\")",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "punctuation.definition.string.begin.php"
        }
      },
      "end": "(\")",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.php"
        }
      },
      "name": "string.quoted.double.php",
      "patterns": [
        {
          "begin": "(?<=\")",
          "contentName": "source.js.embedded.php",
          "end": "(?=\")",
          "name": "string.quoted.double.js.php",
          "patterns": [
            {
              "begin": "\\s*(?=<script)",
              "end": "(?=\")",
              "patterns": [
                {
                  "include": "source.php#interpolation_double_quoted"
                },
                {
                  "include": "text.html.basic"
                }
              ]
            },
            {
              "include": "source.php#interpolation_double_quoted"
            },
            {
              "include": "source.js"
            }
          ]
        }
      ]
    },
    "js-string-single-quoted": {
      "begin": "(/\\*\\s?js\\s?\\*/)\\s*(')",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "punctuation.definition.string.begin.php"
        }
      },
      "end": "(')",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.php"
        }
      },
      "name": "string.quoted.single.php",
      "patterns": [
        {
          "begin": "(?<=')",
          "contentName": "source.js.embedded.php",
          "end": "(?=')",
          "name": "string.quoted.single.js.php",
          "patterns": [
            {
              "begin": "\\s*(?=<script)",
              "end": "(?=')",
              "patterns": [
                {
                  "include": "text.html.basic"
                }
              ]
            },
            {
              "include": "source.js"
            }
          ]
        }
      ]
    }
  }
}