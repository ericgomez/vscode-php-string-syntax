{
  "scopeName": "source.php.js",
  "injectionSelector": "L:text.html.php -comment -string",
  "patterns": [
    {
      "include": "#js-string-single"
    },
    {
      "include": "#js-string-double"
    }
  ],
  "repository": {
    "js-string-single": {
      "begin": "(/\\*js\\*/)\\s*(')",
      "end": "\\2",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "string.quoted.double.php"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.quoted.double.php"
        }
      },
      "contentName": "text.js.embedded.php",
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    },
    "js-string-double": {
      "begin": "(/\\*js\\*/)\\s*(\")",
      "end": "\\2",
      "beginCaptures": {
        "1": {
          "name": "comment.block.php"
        },
        "2": {
          "name": "string.quoted.double.php"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.quoted.double.php"
        }
      },
      "contentName": "text.js.embedded.php",
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    }
  }
}